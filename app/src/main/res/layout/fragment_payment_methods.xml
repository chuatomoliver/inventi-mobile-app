<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".fragment.PaymentMethodsFragment">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_down_sign_to_navigate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/blue" />


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Payment Methods"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />

    <TextView
        android:id="@+id/paymentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Cash Payment"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <LinearLayout
        android:id="@+id/paymentOption1_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/edittext_rounded"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentLabel">

        <TextView
            android:id="@+id/paymentOption1Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Cash"
            android:textColor="#9A9797"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/paymentOption1_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/paymentLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Credit and Debit Card"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentOption1_layout" />

    <LinearLayout
        android:id="@+id/paymentOption2_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/edittext_rounded"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentLabel2">

        <TextView
            android:id="@+id/paymentOption2Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Add new card"
            android:textColor="#9A9797"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/paymentOption2_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/paymentLabel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="More Payment Options"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentOption2_layout" />

    <LinearLayout
        android:id="@+id/paymentOption3_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/edittext_rounded"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentLabel3">

        <TextView
            android:id="@+id/paymentOption3Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="PayPal"
            android:textColor="#9A9797"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/paymentOption3_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/paymentOption4_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/edittext_rounded"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentOption3_layout">

        <TextView
            android:id="@+id/paymentOption4Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Bank Transfer"
            android:textColor="#9A9797"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/paymentOption4_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>