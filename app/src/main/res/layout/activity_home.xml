<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <LinearLayout
        android:id="@+id/actionbar_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyblue"
        android:orientation="vertical"
        android:paddingTop="@dimen/_20ssp"
        android:paddingBottom="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Tom,"
                android:textSize="24dp"
                style="@style/ProximaNovaTextStyle"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Welcome !"
                android:textSize="22dp"
                style="@style/ProximaNovaTextStyle" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_notification_bell" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What can I do for you?"
            android:textSize="12dp"
            style="@style/ProximaNovaTextStyleNormal"
            android:paddingLeft="20dp"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/actionbar_search"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@color/skyblue"></View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_rounded"
            android:drawableLeft="@drawable/ic_manifying"
            android:hint="Search Here"
            android:padding="10dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_search">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_features"
                android:visibility="gone"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="20" />


            <LinearLayout
                android:id="@+id/cardview_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_blue"
                android:orientation="vertical"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_features"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/tompogi" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_toRightOf="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOM OLIVER O. CHUA"
                        android:padding="2dp"
                        style="@style/ProximaNovaTextStyleNormal"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/profession"
                        android:layout_below="@+id/name"
                        android:layout_toRightOf="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caregiver"
                        android:padding="2dp"
                        style="@style/ProximaNovaTextStyleNormal"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/phone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_phone" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/layout_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cardview_darkblue">

                    <TextView
                        android:id="@+id/schedule"
                        android:layout_below="@+id/name"
                        android:layout_toRightOf="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:text="Dec 5, 2025"
                        android:drawablePadding="4dp"
                        android:padding="2dp"
                        android:gravity="center"
                        style="@style/ProximaNovaTextStyleNormal"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/white" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_below="@+id/name"
                        android:layout_toRightOf="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_clock"
                        android:text="9: 00am - 6:00pm"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:padding="2dp"
                        style="@style/ProximaNovaTextStyleNormal"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tvSuggetion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Jobs"
                android:textSize="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/ProximaNovaTextStyle1Bold"
                app:layout_constraintTop_toBottomOf="@+id/cardview_priority"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tvViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textSize="14dp"
                android:layout_marginEnd="30sp"
                android:layout_marginTop="18dp"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/ProximaNovaTextStyle1"
                app:layout_constraintTop_toBottomOf="@+id/cardview_priority"
                android:layout_marginRight="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_jobs"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSuggetion"
                tools:itemCount="20" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/skyblue"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ic_home"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_30sp"
            android:layout_weight="1"
            android:src="@drawable/ic_home" />


        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/ic_search" />

        <ImageView
            android:id="@+id/mailButton"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/ic_location" />

        <ImageView
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/ic_profile2" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/actionbar_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--    <androidx.viewpager2.widget.ViewPager2-->
    <!--        android:id="@+id/viewPager"-->
    <!--        android:layout_width="match_parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/actionbar_search"-->
    <!--        app:layout_constraintRight_toRightOf="parent"-->
    <!--        app:layout_constraintLeft_toRightOf="parent"-->
    <!--        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:layout_weight="1"/>-->


</androidx.constraintlayout.widget.ConstraintLayout>