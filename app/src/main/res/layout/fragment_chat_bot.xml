<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluebg"
    tools:context=".fragment.ChatBotFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_top_corner"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons1"
        app:layout_constraintVertical_bias="1.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChatMsgOutput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="12dp"

            app:layout_constraintBottom_toTopOf="@+id/constraintLayout9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF1F1"
            android:clipToOutline="false"
            android:elevation="12dp"
            android:outlineProvider="bounds"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/inputMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="12dp"
                android:background="@drawable/edittext_rounded"
                android:backgroundTint="#EDEAEA"
                android:ems="10"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Type your message here...."
                android:inputType="text"
                android:padding="15dp"
                android:paddingStart="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout12" />

            <ImageView
                android:id="@+id/addFile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/add_icon"
                android:tint="@color/blue"
                app:layout_constraintBottom_toBottomOf="@+id/inputMsg"
                app:layout_constraintStart_toStartOf="@+id/inputMsg"
                app:layout_constraintTop_toTopOf="@+id/inputMsg"
                tools:ignore="UseAppTint" />

            <ImageView
                android:id="@+id/sentMsg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:foregroundGravity="center"
                android:src="@drawable/sent_icon"
                app:layout_constraintBottom_toBottomOf="@+id/inputMsg"
                app:layout_constraintEnd_toEndOf="@+id/inputMsg"
                app:layout_constraintTop_toTopOf="@+id/inputMsg"
                app:tint="@color/blue" />

            <LinearLayout
                android:id="@+id/linearLayout12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/whatIsCertiCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_rounded"
                    android:backgroundTint="@color/gray"
                    android:fontFamily="@font/proximanova_regular"
                    android:padding="8dp"
                    android:text="🤔What Is Certicode?"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/servicesOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_rounded"
                    android:backgroundTint="@color/gray"
                    android:fontFamily="@font/proximanova_regular"
                    android:padding="8dp"
                    android:text="💡Services Offers"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/faqs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_rounded"
                    android:backgroundTint="@color/gray"
                    android:fontFamily="@font/proximanova_regular"
                    android:padding="8dp"
                    android:text="🙋‍♂️FAQS"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/linearOfferBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="22dp"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="@+id/rvChatMsgOutput"
            app:layout_constraintStart_toStartOf="@+id/rvChatMsgOutput"
            app:layout_constraintTop_toTopOf="@+id/rvChatMsgOutput">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/proximanova_semi"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:text="How Can I Help you today?"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/rvChatMsgOutput" />

            <TextView
                android:id="@+id/clubHouseTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded"
                android:backgroundTint="@color/gray"
                android:drawableEnd="@drawable/sent_float_msg"
                android:fontFamily="@font/proximanova_regular"
                android:padding="15dp"
                android:text="How do I book the clubhouse?"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amenitiesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded"
                android:backgroundTint="@color/gray"
                android:drawableEnd="@drawable/sent_float_msg"
                android:fontFamily="@font/proximanova_regular"
                android:padding="15dp"
                android:text="Can I see the availability of amenities ?"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reportTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded"
                android:backgroundTint="@color/gray"
                android:drawableEnd="@drawable/sent_float_msg"
                android:fontFamily="@font/proximanova_regular"
                android:padding="15dp"
                android:text="How do I report  maintenance issue?"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/circle_background"
            android:padding="12dp"
            android:src="@drawable/arrow_down_sign_to_navigate"
            android:backgroundTint="@color/blue1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toEndOf="@+id/backBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/bot_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Chat Bot"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/botStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/dot_icon"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:gravity="center"
                    android:text="online"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>