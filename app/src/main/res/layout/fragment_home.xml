<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/skyblue"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_rounded"
            android:drawableLeft="@drawable/ic_manifying"
            android:hint="Search Here"
            android:padding="10dp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_search"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Your existing content goes here -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="20" />

            <TextView
                android:id="@+id/tvSuggetion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended Property"
                android:textSize="@dimen/_20ssp"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginTop="@dimen/_16ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/ProximaNovaTextStyle1Bold"
                app:layout_constraintTop_toBottomOf="@+id/rv_features"
                android:layout_marginRight="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_aparment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSuggetion"
                tools:itemCount="20" />

            <TextView
                android:id="@+id/tvAgents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended Agents"
                android:textSize="@dimen/_20ssp"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginTop="@dimen/_16ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/ProximaNovaTextStyle1Bold"
                app:layout_constraintTop_toBottomOf="@+id/rv_aparment"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tvViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See all"
                android:textSize="@dimen/size_14dp"
                android:layout_marginEnd="30sp"
                android:layout_marginTop="@dimen/size_22dp"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/ProximaNovaTextStyle1"
                app:layout_constraintTop_toBottomOf="@+id/rv_aparment"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:id="@+id/cardview_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_blue"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/size_50dp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvAgents"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/tompogi" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_toRightOf="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOM OLIVER O. CHUA"
                        android:padding="2dp"
                        style="@style/ProximaNovaTextStyleNormal"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/profession"
                        android:layout_below="@+id/name"
                        android:layout_toRightOf="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="License Broker"
                        android:padding="2dp"
                        style="@style/ProximaNovaTextStyleNormal"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/phone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_phone" />

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/layout_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cardview_darkblue">

                    <TextView
                        android:id="@+id/schedule"
                        android:layout_below="@+id/name"
                        android:layout_toRightOf="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:text="Dec 5, 2025"
                        android:drawablePadding="4dp"
                        android:padding="2dp"
                        android:gravity="center"
                        style="@style/ProximaNovaTextStyleNormal"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/white" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_below="@+id/name"
                        android:layout_toRightOf="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_clock"
                        android:text="9: 00am - 6:00pm"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:padding="2dp"
                        style="@style/ProximaNovaTextStyleNormal"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
